<div class="row container">
  <div class="col s12 m4 l3">
    <div class="card-image section">
      <%= image_tag select_image(@partner), class:"responsive-img" %>
    </div>
    <ul class="collection">
      <li class="collection-item">
        <%= @partner.name %>
      </li>
      <li class="collection-item">所在地：
        <%= I18n.t "enums.user.address.#{@partner.address}"%>
      </li>
      <li class="collection-item">ジャンル：
        <%= I18n.t "enums.user.genre.#{@partner.genre}"%>
      </li>
      <li class="collection-item">人数：
        <%= I18n.t "enums.user.people.#{@partner.people}"%>
      </li>
    </ul>
    <%= render partial: "button", locals: button_data(current_user, @partner, @relation)%>
  </div>
  <div class="col s12 m8 l9">
    <div class="section">
      <p> プロフィール： </p>
      <p>
        <%=select_profile(@partner)%>
      </p>
    </div>
  </div>
</div>