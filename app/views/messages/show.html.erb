<div class="message-space-main" id="message-space-main" data-user-id=<%=current_user.id%> data-partner-id=<%=@partner.id%>>
  <%= render @messages %>
</div>

<div class="row message-send-tools">
  <%= form_with model: [current_user,@message], class:"col s12 message-send-system", id: "my_message_form" do |f| %>
    <%= f.hidden_field :partner_id, value: @partner.id %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :cotent, "メッセージを入力します"%>
        <%=f.text_area :content, id:"textarea1", class:"materialize-textarea", id: "message-content", data:{length: "200"} %>
      </div>
    </div>
      <%= f.button :commit, type: :submit, class:"btn waves-effect waves-light", id: "message-send-btn" do%>
        送信<i class="material-icons right">send</i>
      <%end%>
      <%=link_to user_path(@partner), class:"waves-effect waves-light btn" do %><%=@partner.name%>　さんのプロフィールを見る<%end%>
  <% end %>
</div>



